---
import { siteConfig } from '../config/site';
const currentYear = new Date().getFullYear();
---

<footer class="relative bg-gradient-to-br from-gray-900 to-blue-900 text-white border-t border-blue-700 overflow-hidden">
  <div class="absolute inset-0 bg-repeat opacity-5 z-0" style="background-image: url('/images/pattern-soccer.svg'); background-size: 300px;"></div>

  <div class="container mx-auto px-4 py-6 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <!-- Logo y descripción -->
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xl font-bold mb-2 text-blue-300 flex items-center">
          <span class="mr-2">⚽</span> {siteConfig.name}
        </h3>
        <p class="text-blue-100 text-sm">
          {siteConfig.shortDescription}
        </p>
      </div>

      <!-- Enlaces rápidos -->
      <div>
        <h4 class="text-lg font-semibold mb-2 text-blue-300">Enlaces Rápidos</h4>
        <ul class="space-y-1 text-sm">
          <li>
            <a href="/equipos" class="text-blue-100 hover:text-white transition-colors flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
              </svg>
              Equipos
            </a>
          </li>
          <li>
            <a href="/calendario" class="text-blue-100 hover:text-white transition-colors flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              Calendario
            </a>
          </li>
          <li>
            <a href="/tabla" class="text-blue-100 hover:text-white transition-colors flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM14 11a1 1 0 011 1v1h1a1 1 0 110 2h-1v1a1 1 0 11-2 0v-1h-1a1 1 0 110-2h1v-1a1 1 0 011-1z" />
              </svg>
              Tabla de Posiciones
            </a>
          </li>
          <li>
            <a href="/galeria" class="text-blue-100 hover:text-white transition-colors flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
              Galería
            </a>
          </li>
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h4 class="text-lg font-semibold mb-2 text-blue-300">Contacto</h4>
        <ul class="space-y-1 text-sm">
          <li class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-300" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <a href={`mailto:${siteConfig.contact.email}`} class="text-blue-100 hover:text-white transition-colors">
              {siteConfig.contact.email}
            </a>
          </li>
          <li class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-300" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <span class="text-blue-100">{siteConfig.contact.address}</span>
          </li>
          <li class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-300" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <span class="text-blue-100">{siteConfig.contact.phone}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Redes sociales y copyright -->
    <div class="mt-4 pt-4 border-t border-blue-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex space-x-4 mb-3 md:mb-0">
          {siteConfig.links.facebook && (
            <a href={siteConfig.links.facebook} target="_blank" rel="noopener noreferrer" class="text-blue-300 hover:text-white transition-colors bg-blue-900/50 p-2 rounded-full border border-blue-700">
              <span class="sr-only">Facebook</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
          {siteConfig.links.instagram && (
            <a href={siteConfig.links.instagram} target="_blank" rel="noopener noreferrer" class="text-blue-300 hover:text-white transition-colors bg-blue-900/50 p-2 rounded-full border border-blue-700">
              <span class="sr-only">Instagram</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
          {siteConfig.links.twitter && (
            <a href={siteConfig.links.twitter} target="_blank" rel="noopener noreferrer" class="text-blue-300 hover:text-white transition-colors bg-blue-900/50 p-2 rounded-full border border-blue-700">
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          )}
          {siteConfig.links.whatsapp && (
            <a href={siteConfig.links.whatsapp} target="_blank" rel="noopener noreferrer" class="text-blue-300 hover:text-white transition-colors bg-blue-900/50 p-2 rounded-full border border-blue-700">
              <span class="sr-only">WhatsApp</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M20.472 3.528C18.208 1.264 15.136 0 11.888 0 5.392 0 0.112 5.28 0.112 11.776c0 2.08.544 4.096 1.568 5.872L0 24l6.496-1.696c1.712.928 3.648 1.44 5.6 1.44h.016c6.496 0 11.776-5.28 11.776-11.776 0-3.152-1.232-6.112-3.416-8.44zM11.888 21.616h-.016c-1.76 0-3.488-.464-4.992-1.344l-.352-.208-3.712.976.992-3.632-.24-.368c-.96-1.536-1.472-3.328-1.472-5.168 0-5.392 4.384-9.776 9.792-9.776 2.608 0 5.056 1.024 6.896 2.864 1.84 1.84 2.864 4.288 2.864 6.896 0 5.408-4.384 9.76-9.76 9.76zm5.376-7.312c-.288-.144-1.728-.848-1.984-.944-.272-.096-.464-.144-.656.144-.192.288-.752.944-.928 1.136-.176.192-.352.208-.64.064-.288-.144-1.216-.448-2.32-1.424-.864-.768-1.44-1.712-1.616-2-.176-.288-.016-.448.128-.592.144-.144.32-.368.48-.56.144-.192.192-.336.304-.56.096-.224.048-.416-.048-.576-.096-.144-.656-1.584-.896-2.176-.24-.576-.48-.496-.656-.496-.176 0-.368-.016-.56-.016-.192 0-.512.064-.784.352-.272.288-1.04 1.008-1.04 2.448 0 1.44 1.056 2.832 1.2 3.024.144.192 2.032 3.088 4.912 4.32.688.288 1.216.464 1.632.592.688.224 1.312.192 1.808.112.544-.08 1.728-.704 1.984-1.376.24-.672.24-1.248.176-1.376-.064-.144-.24-.224-.528-.368z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
        </div>
        <p class="text-blue-200 text-xs">
          © {currentYear} {siteConfig.name}. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    background: linear-gradient(135deg, #0f172a 0%, #1e3a8a 100%);
    position: relative;
    overflow: hidden;
  }
</style>