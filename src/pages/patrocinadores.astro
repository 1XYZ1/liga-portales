---
import Layout from '../layouts/Layout.astro';
import type { Sponsor } from '../../data/sponsors';
import { sponsors } from '../../data/sponsors';

interface Location {
  address: string;
  city: string;
  maps: {
    google: string;
    waze: string;
  };
}

const tierOrder = {
  platinum: 1,
  gold: 2,
  silver: 3,
  bronze: 4
};

const sortedSponsors = sponsors.sort((a, b) => tierOrder[a.tier] - tierOrder[b.tier]);
const mainSponsor = sponsors[0] as Sponsor; // Milo y Sus Amigos
---

<Layout title="Patrocinadores - Liga Portales">
  <main>
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-br from-purple-600 via-purple-700 to-purple-900 py-16 sm:py-24 overflow-hidden">
      <div class="absolute inset-0 bg-[url('/images/pattern-paws.svg')] opacity-10 animate-pulse"></div>
      <div class="container mx-auto px-4 relative">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold text-white mb-4 sm:mb-6 animate-fade-in">
            Nuestros Patrocinadores
          </h1>
          <p class="text-lg sm:text-xl text-purple-100 max-w-2xl mx-auto px-4 animate-fade-in-delayed">
            Orgullosos de contar con el apoyo de quienes hacen posible nuestro deporte
          </p>
        </div>
      </div>
    </div>

    <!-- Sponsor Card -->
    <div class="container mx-auto px-4 py-8 sm:py-12">
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform hover:shadow-2xl transition-all duration-300">
        <!-- Header -->
        <div class="relative h-auto sm:h-64 bg-gradient-to-br from-purple-600 via-purple-700 to-purple-900 overflow-hidden">
          <!-- Patrón de fondo animado -->
          <div class="absolute inset-0 bg-[url('/images/pattern-paws.svg')] opacity-5 animate-float"></div>
          <div class="absolute inset-0 bg-black/10"></div>

          <!-- Contenedor del logo y título -->
          <div class="relative p-6 sm:p-8">
            <div class="flex flex-col sm:flex-row items-center gap-6">
              <!-- Logo con efectos -->
              <div class="w-32 h-32 sm:w-40 sm:h-40 mx-auto sm:mx-0">
                <div class="bg-white p-4 rounded-xl shadow-lg relative transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl">
                  <div class="relative overflow-hidden rounded-lg">
                    <div class="absolute inset-0 bg-gradient-to-br from-purple-100 to-pink-100 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                    <img
                      src={mainSponsor.logo}
                      alt={mainSponsor.name}
                      class="w-full h-full object-contain"
                    />
                  </div>
                </div>
              </div>

              <!-- Información del patrocinador -->
              <div class="text-white text-center sm:text-left flex-1">
                <div class="inline-block bg-purple-800 px-3 py-1 rounded-full text-xs font-semibold text-white mb-2">Patrocinador Principal</div>
                <h2 class="text-2xl sm:text-3xl font-bold mb-2 text-shadow-lg">{mainSponsor.name}</h2>
                <p class="text-sm sm:text-base text-purple-50 text-shadow-sm max-w-xl">{mainSponsor.description}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="p-4 sm:p-8 pt-20 sm:pt-12">
          <!-- Descripción -->
          <div class="max-w-3xl mx-auto text-center mb-8 sm:mb-12">
            <p class="text-gray-600 text-base sm:text-lg leading-relaxed px-4">
              {mainSponsor.longDescription}
            </p>
          </div>

          <!-- Servicios -->
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8 sm:mb-12 px-4">
            {mainSponsor.services.map(service => (
              <div class="bg-purple-50 rounded-xl p-4 sm:p-6 text-center hover:bg-purple-100 transition-colors">
                <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 sm:mb-4 bg-purple-200 rounded-full flex items-center justify-center">
                  {service.icon === 'scissors' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-purple-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.242-4.242 3 3 0 004.242 4.242zm0-8.485a3 3 0 10-4.242-4.242 3 3 0 004.242 4.242z" />
                    </svg>
                  )}
                  {service.icon === 'health' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-purple-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  )}
                  {service.icon === 'star' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-purple-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  )}
                </div>
                <h3 class="text-base sm:text-lg font-semibold text-purple-900 mb-2">{service.name}</h3>
                <p class="text-sm sm:text-base text-purple-700">{service.description}</p>
              </div>
            ))}
          </div>

          <!-- Características -->
          <div class="bg-gradient-to-r from-purple-100 to-pink-100 rounded-2xl p-6 sm:p-8 mb-8 sm:mb-12 mx-4">
            <h3 class="text-xl sm:text-2xl font-bold text-purple-900 text-center mb-6 sm:mb-8">¿Por qué elegirnos?</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
              {mainSponsor.features.map(feature => (
                <div class="flex items-center gap-3 p-2">
                  <div class="flex-shrink-0">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-sm sm:text-base text-purple-900">{feature}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Información de Contacto -->
          <div class="max-w-4xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8">
              <!-- Horario y Ubicación -->
              <div class="bg-gray-50 rounded-xl p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-4 sm:mb-6">Horario y Ubicación</h3>
                <div class="space-y-4 sm:space-y-6">
                  <!-- Horarios -->
                  <div class="space-y-3">
                    <h4 class="font-medium text-gray-900 text-sm sm:text-base">Horario de Atención</h4>
                    <div class="grid gap-2 text-sm sm:text-base text-gray-600">
                      <div class="flex justify-between items-center py-2 border-b border-gray-200">
                        <span class="font-medium">Lunes a Viernes</span>
                        <span>09:00 - 19:30</span>
                      </div>
                      <div class="flex justify-between items-center py-2 border-b border-gray-200">
                        <span class="font-medium">Sábados</span>
                        <span>09:00 - 18:00</span>
                      </div>
                      <div class="flex justify-between items-center py-2 border-b border-gray-200">
                        <span class="font-medium">Domingos</span>
                        <span class="text-red-500">Cerrado</span>
                      </div>
                    </div>
                  </div>

                  <!-- Ubicación -->
                  <div class="space-y-3">
                    <h4 class="font-medium text-gray-900 text-sm sm:text-base">Dirección</h4>
                    <p class="text-sm sm:text-base text-gray-600">
                      {mainSponsor.contact.location.address}<br/>
                      {mainSponsor.contact.location.city}
                    </p>
                    <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
                      <a
                        href={mainSponsor.contact.location.maps.google}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm w-full sm:w-auto"
                      >
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 0C7.802 0 4 3.403 4 7.602C4 11.8 7.469 16.812 12 24C16.531 16.812 20 11.8 20 7.602C20 3.403 16.199 0 12 0ZM12 11C10.343 11 9 9.657 9 8C9 6.343 10.343 5 12 5C13.657 5 15 6.343 15 8C15 9.657 13.657 11 12 11Z"/>
                        </svg>
                        Google Maps
                      </a>
                      <a
                        href={mainSponsor.contact.location.maps.waze}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition-colors text-sm w-full sm:w-auto"
                      >
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12.0024 0C5.373 0 0 5.373 0 12.0024C0 18.6318 5.373 24.0048 12.0024 24.0048C18.6318 24.0048 24.0048 18.6318 24.0048 12.0024C24.0048 5.373 18.6318 0 12.0024 0ZM12.0024 3.6007C14.4034 3.6007 16.8044 6.0017 16.8044 8.4027C16.8044 10.8037 14.4034 13.2047 12.0024 13.2047C9.6014 13.2047 7.2004 10.8037 7.2004 8.4027C7.2004 6.0017 9.6014 3.6007 12.0024 3.6007Z"/>
                        </svg>
                        Waze
                      </a>
                    </div>
                  </div>

                  <!-- Mapa -->
                  <div class="rounded-lg overflow-hidden shadow-lg">
                    <iframe
                      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3329.0467330649766!2d-70.65661902427287!3d-33.44516079969249!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662c5a7c3d7a7b7%3A0x1c1c1c1c1c1c1c1c!2sMario%20Alvo%201489%2C%20Santiago%2C%20Chile!5e0!3m2!1ses!2scl!4v1709901234567!5m2!1ses!2scl"
                      width="100%"
                      height="200"
                      style="border:0;"
                      loading="lazy"
                      referrerpolicy="no-referrer-when-downgrade"
                      class="w-full sm:h-[250px]"
                    ></iframe>
                  </div>
                </div>
              </div>

              <!-- Contacto -->
              <div class="bg-gray-50 rounded-xl p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-4 sm:mb-6">Contacto</h3>
                <div class="space-y-3 sm:space-y-4">
                  <a
                    href={`https://wa.me/${mainSponsor.contact.whatsapp}`}
                  target="_blank"
                  rel="noopener noreferrer"
                    class="flex items-center gap-3 p-3 rounded-lg text-gray-600 hover:bg-green-50 hover:text-green-600 transition-colors active:bg-green-100"
                  >
                    <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.89-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.226 1.36.194 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.414z"/>
                    </svg>
                    <span class="font-medium text-sm sm:text-base">WhatsApp</span>
                  </a>
                  <a
                    href={`mailto:${mainSponsor.contact.email}`}
                    class="flex items-center gap-3 p-3 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors active:bg-blue-100"
                  >
                    <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span class="font-medium text-sm sm:text-base break-all">{mainSponsor.contact.email}</span>
                  </a>
                  <a
                    href={`https://instagram.com/${mainSponsor.contact.instagram}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 p-3 rounded-lg text-gray-600 hover:bg-pink-50 hover:text-pink-600 transition-colors active:bg-pink-100"
                  >
                    <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.259-.012 3.668-.069 4.948-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                    <span class="font-medium text-sm sm:text-base">@{mainSponsor.contact.instagram}</span>
                </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Patrocinador Bronze -->
      <div class="mt-12">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform hover:shadow-2xl transition-all duration-300">
          <!-- Header -->
          <div class="relative h-auto sm:h-64 bg-gradient-to-br from-amber-600 via-amber-700 to-amber-900 overflow-hidden">
            <!-- Patrón de fondo animado -->
            <div class="absolute inset-0 bg-[url('/images/pattern-paws.svg')] opacity-5 animate-float"></div>
            <div class="absolute inset-0 bg-black/10"></div>

            <!-- Contenedor del logo y título -->
            <div class="relative p-6 sm:p-8">
              <div class="flex flex-col sm:flex-row items-center gap-6">
                <!-- Logo con efectos -->
                <div class="w-32 h-32 sm:w-40 sm:h-40 mx-auto sm:mx-0">
                  <div class="bg-white p-4 rounded-xl shadow-lg relative transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl">
                    <div class="relative overflow-hidden rounded-lg">
                      <div class="absolute inset-0 bg-gradient-to-br from-amber-100 to-amber-200 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                      <img
                        src={sponsors[1].logo}
                        alt={sponsors[1].name}
                        class="w-full h-full object-contain"
                      />
                    </div>
                  </div>
                </div>

                <!-- Información del patrocinador -->
                <div class="text-white text-center sm:text-left flex-1">
                  <div class="inline-block bg-amber-800 px-3 py-1 rounded-full text-xs font-semibold text-white mb-2">Aliado Deportivo</div>
                  <h2 class="text-2xl sm:text-3xl font-bold mb-2 text-shadow-lg">{sponsors[1].name}</h2>
                  <p class="text-sm sm:text-base text-amber-50 text-shadow-sm max-w-xl">{sponsors[1].description}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="p-4 sm:p-8 pt-20 sm:pt-12">
            <!-- Descripción -->
            <div class="max-w-3xl mx-auto text-center mb-8 sm:mb-12">
              <p class="text-gray-600 text-base sm:text-lg leading-relaxed px-4">
                {sponsors[1].longDescription}
              </p>
            </div>

            <!-- Servicios -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-8 sm:mb-12 px-4">
              {sponsors[1].services.map(service => (
                <div class="bg-amber-50 rounded-xl p-4 sm:p-6 text-center hover:bg-amber-100 transition-colors">
                  <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 sm:mb-4 bg-amber-200 rounded-full flex items-center justify-center">
                    {service.icon === 'tshirt' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-amber-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.38 3.46L16 2a4 4 0 01-8 0L3.62 3.46a2 2 0 00-1.34 2.23l.58 3.47a1 1 0 00.99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 002-2V10h2.15a1 1 0 00.99-.84l.58-3.47a2 2 0 00-1.34-2.23z"/>
                      </svg>
                    )}
                    {service.icon === 'accessories' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-amber-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                      </svg>
                    )}
                    {service.icon === 'print' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-amber-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
                      </svg>
                    )}
                  </div>
                  <h3 class="text-base sm:text-lg font-semibold text-amber-900 mb-2">{service.name}</h3>
                  <p class="text-sm sm:text-base text-amber-700">{service.description}</p>
                </div>
              ))}
            </div>

            <!-- Características -->
            <div class="bg-gradient-to-r from-amber-100 to-amber-200 rounded-2xl p-6 sm:p-8 mb-8 sm:mb-12 mx-4">
              <h3 class="text-xl sm:text-2xl font-bold text-amber-900 text-center mb-6 sm:mb-8">¿Por qué elegirnos?</h3>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
                {sponsors[1].features.map(feature => (
                  <div class="flex items-center gap-3 p-2">
                    <div class="flex-shrink-0">
                      <svg class="w-5 h-5 sm:w-6 sm:h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <span class="text-sm sm:text-base text-amber-900">{feature}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Contacto -->
            <div class="bg-amber-50 rounded-xl p-6 sm:p-8 mx-4">
              <h3 class="text-lg sm:text-xl font-semibold text-amber-900 mb-4 sm:mb-6">Contacto</h3>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <a
