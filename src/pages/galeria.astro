---
import Layout from '../layouts/Layout.astro';
import { galleryImages } from '../../data/gallery';
import Gallery from '../components/Gallery';

// Declarar el tipo Window para las funciones globales
declare global {
  interface Window {
    expandImage: (imageId: number) => void;
    closeModal: () => void;
  }
}
---

<Layout title="Galería - Liga de Fútbol">
  <div class="galeria-container">
    <Gallery client:load images={galleryImages} />
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .galeria-container {
    background: linear-gradient(135deg, #0f172a 0%, #1e3a8a 100%);
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .galeria-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('/images/pattern-soccer.svg');
    background-size: 300px;
    opacity: 0.05;
    pointer-events: none;
    z-index: 0;
  }

  .galeria-container > * {
    position: relative;
    z-index: 1;
  }
</style>